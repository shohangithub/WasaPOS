@model IEnumerable<Model.Entities.Sale>

@{
    ViewBag.Title = "DueCollectionList";
}
<table id="dynamic-table" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Date </th>
            <th>Invoice</th>
            <th> Due Amount</th>
            <th>Status</th>
        </tr>
    </thead>

    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.SaleDate.ToString("dd-MM-yyy")</td>
                    <td>@item.InvoiceId</td>
                    <td>@item.DueAmount</td>
                    <td>
                        @if (@item.Status.ToString() == "Paid")
                    {
                            <span class="label label-sm label-warning">Paid</span>
                        }
                        else
                        {
                            <span class="label label-sm label-success">Due</span>
                        }
                    </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td class="number" colspan="4"><h4>No Due Amount Available!</h4></td>
            </tr>
        }


    </tbody>
</table>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dynamic-table').DataTable();
    });
</script>