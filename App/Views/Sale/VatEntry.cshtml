@model Model.Entities.VatEntry
@{
    ViewBag.Title = "VatEntry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-xs-12 ">
        <div class="widget-box">
            @*<div class="widget-header">
                <h4 class="widget-title">Sales Information</h4>

            </div>*@

            <div class="widget-body">
                <div class="widget-main">
                    @using (Html.BeginForm("UpdateVat", "Sale", new AjaxOptions { HttpMethod = "POST"}))
                    {
                        <input type="text" id="hidden_area" style="display:none;" />
                        <div class="row">
                            <div class="col-xs-12 ">
                                <div class="widget-box">
                                    <div class="widget-header">
                                        <h4 class="widget-title">Vat Entry</h4>

                                    </div>
                                    <div class="widget-body">
                                        <div class="widget-main">
                                            <div class="row">
                                                <div class="col-sm-offset-4 col-sm-3">
                                                    <div class="form-group">
                                                        <label class="col-sm-4 control-label no-padding-right" for="fromdate"> Vat Amount</label>
                                                        <div class="col-sm-4">
                                                                @Html.HiddenFor(x=>x.VatId)
                                                                @Html.TextBoxFor(x => x.VatAmount,new {@class="form-control"})
                                                          </div>
                                                    </div>
                                                    <br />
                                                    <div class="form-group">
                                                        <div class="col-sm-offset-2 col-sm-4">
                                                            <input type="submit" class="btn btn-success " value="Submit" style="margin-top:15px;"/>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


