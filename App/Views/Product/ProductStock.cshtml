@model IEnumerable<Model.Entities.Product>

@{
    ViewBag.Title = "ProductStock";
}

<div class="col-xs-12">

    <div class="clearfix">
        <div class="pull-right tableTools-container"></div>
    </div>
    <div class="table-header btn-custom">
        Results for "Product Stock"
        <a class="pull-right btn-print" href="@Url.Action("ProductStock","Reports", new { id = "pdf" })" target="_blank">
                <i class="ace-icon fa fa-print bigger-130"></i> Print
            </a>

    </div>


    <table id="dynamic-table" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Product Code </th>
                <th>Product Name </th>
                <th>Unit</th>
                <th>Available Stock</th>
            </tr>
        </thead>

        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        
                        <td>@item.ProductId</td>
                        <td>@item.ProductName</td>
                        <td>@item.Uint</td>
                        <td>@item.CurrentStoke</td>
                       
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="number" colspan="4"><h4>No Data Available!</h4></td>
                </tr>
            }


        </tbody>
    </table>

</div>
