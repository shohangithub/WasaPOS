@model IList <Model.Entities.Tbl_Menu>
@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="right_col" role="main">
    <div class="">
         <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Add Menu<small>Create new Menu</small></h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content" id="contactFormArea">
                        <br />
                        <form id="mainform" data-parsley-validate class="form-horizontal form-label-left">
                            <div class="form-group">
                                @Html.Hidden("MenuId","",new { id = "MenuId", })
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                    Name <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBox("MenuName","",new { @class = "form-control col-md-7 col-xs-12", id = "MenuName", required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                    Order No <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBox("MenuOrderNo","", new { @class = "form-control col-md-7 col-xs-12",id= "MenuOrderNo", required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 col-sm-3 col-xs-12 control-label">
                                    Status <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <div class="radio-custom">
                                        <select id="Status" name="Status" class="form-control">
                                            <option>Active</option>
                                            <option>Inactive</option>
                                        </select>
                                        @*@Html.RadioButton("Status", true, new { id = "radio1" })
                                        <label for="radio1"><i class="fa fa-check" aria-hidden="true"></i></label>
                                        @Html.RadioButton("Status", false, new { id = "radio2" })
                                        <label for="radio2"><i class="fa fa-circle-thin" aria-hidden="true"></i></label>*@

                                    </div>
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button type="button" class="btn btn-primary" id="clearBtn">Clear</button>
                                    <button type="button" class="btn btn-success" id="btnSubmit" onclick="SetMenu()">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
             <div class="clearfix"></div>
             <div class="col-md-12 col-sm-12 col-xs-12">
                 <div class="x_panel">
                     <div class="x_content" id="tableSection">
                         <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                             <thead>
                                 <tr>
                                     <th>Menu ID</th>
                                     <th>Menu Name</th>
                                     <th>Order No</th>
                                     <th>Action</th>
                                 </tr>
                             </thead>

                             <tbody>
                                 @if (Model.Count() > 0)
                                 {
                                     foreach (var item in Model)
                                     {
                                         <tr>
                                             <td>@item.MenuId</td>
                                             <td>@item.MenuName</td>
                                             <td>@item.MenuOrderNo</td>
                                             <td>
                                                 <a class="green" style="cursor:pointer" onclick="Edit('@item.MenuId','@item.MenuName','@item.MenuOrderNo','@item.Status')">
                                                     <i class="ace-icon fa fa-pencil bigger-130"></i>
                                                 </a>
                                                 <a class="red" style="cursor:pointer" onclick="DeleteMenu('@item.MenuId')">
                                                     <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                                 </a>
                                             </td>

                                         </tr>
                                     }
                                 }
                                 else
                                 {
                                     <tr>
                                         <td class="number" colspan="6"><h4>No Data Available!</h4></td>
                                     </tr>
                                 }


                             </tbody>
                         </table>
                     </div>
                 </div>
             </div>

        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
       function SetMenu() {
       debugger
        var MenuName = $("#MenuName").val();
        var MenuOrderNo = $("#MenuOrderNo").val();
        var Status = $("#Status").val();

        if (MenuName == "") {
            alert("Menu name is required.");
        }
        else if (MenuOrderNo == "") {
            alert("Menu Order No is required.");
        } else if (Status == "") {
            alert("Status is required.");
        }
        else {
            var data = {
                MenuName: MenuName,
                MenuOrderNo: MenuOrderNo,
                Status: Status
            };
            $.ajax({
                type: "POST",
                url: "../Security/AddMenu",
                data: JSON.stringify(data),
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                cache: false,
                success: function (data, textStatus, jqXHR) {
                    $("#dialogSupplier").dialog('close');
                    alert(data.message);
                    //$('#after_create').load('@Url.Action("UserList", "Security")');
                    $("#dialogSupplier").dialog('close');
                    $("#MenuId").val("");
                    $("#MenuName").val("");
                    $("#MenuOrderNo").val("");
                    $("#Status").val("");
                    window.location.reload();
                },
                error: function () {
                    alert('Menu Creation Failed!');
                }
            });
        }
    }

    function Edit(MenuId, MenuName, MenuOrderNo,Status) {
        data = '<input type="hidden" id="MenuId" value="' + MenuId + '">';
        $("#hidden_area").html(data);
        $("#MenuName").val(MenuName);
        $("#MenuOrderNo").val(MenuOrderNo);
        $("#Status").val(Status);


        $("#setoffice").hide();
        $("#updateoffice").show();
    }

    function UpdateMenu() {
        var MenuId = $("#MenuId").val();
        var MenuName = $("#MenuName").val();
        var MenuOrderNo = $("#MenuOrderNo").val();
        var Status = $("#Status").val();

      if (MenuName == "") {
            alert("Menu name is required.");
        }
      else if (MenuOrderNo == "") {
          alert("Menu Order No is required.");
      } else if (Status == "") {
          alert("Status is required.");
        }
        else {
            var data = {
                MenuId: MenuId,
                MenuName: MenuName,
                MenuOrderNo: MenuOrderNo,
                Status: Status
            };
            $.ajax({
                type: "POST",
                url: "../Security/UpdateMenu",
                data: JSON.stringify(data),
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                cache: false,
                success: function (data) {
                    @*$('#after_create').load('@Url.Action("UserList", "Security")');*@
                    alert(data.message);
                    $("#dialogSupplier").dialog('close');
                    $("#MenuId").val("");
                    $("#MenuName").val("");
                    $("#MenuOrderNo").val("");
                    $("#Status").val("");
                    window.location.reload();
                },
                error: function () {
                    alert('Update Operation Failed!');
                }
            });
        }
    }

    function DeleteMenu(MenuId) {
        if (confirm('Are you sure to delete record?')) {
            var data = {
                MenuId: MenuId
            };

            $.ajax({
                type: "POST",
                url: "../Security/DeleteMenu",
                data: JSON.stringify(data),
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                cache: false,
                success: function (data, textStatus, jqXHR) {
                    alert(data.message);
                    @*$('#after_create').load('@Url.Action("UserList", "Security")');*@
                    $("#setoffice").show();
                    $("#updateoffice").hide();
                    window.location.reload();
                },
                error: function () {
                    $("#setoffice").show();
                    $("#updateoffice").hide();
                    alert('Deleted Failed!');
                }
            });
        }
    }
    </script>
}
