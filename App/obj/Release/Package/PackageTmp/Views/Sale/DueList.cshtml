@model IEnumerable<Model.Entities.Customer>

@{
    ViewBag.Title = "DueList";
}
<div class="row">
    <div class="col-xs-12">

        <div class="clearfix">
            <div class="pull-right tableTools-container"></div>
        </div>
        <div class="table-header btn-custom">
            Results for "Due List"
            <a class="pull-right btn-print" href="@Url.Action("DueList", "Reports", new { id = "PDF" })" target="_blank">
                <i class="ace-icon fa fa-print bigger-130"></i> Print
            </a>
        </div>

    
            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Customer Id</th>
                        <th>Customer Name</th>
                        <th>Phone</th>
                        <th>Area</th>
                        <th>Due Amount</th>
                        <th>View Total</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CustomerUId</td>
                                <td>@item.CustomerName</td>
                                <td>@item.Phone</td>
                                <td>@item.District</td>
                                <td>@item.TotalDueAmount</td>
                               <td>
                                <a class="green" target="_blank" href="@Url.Action("DueCollectionList", "Sale", new {id=item.CustomerId })" >
                                    <i class="ace-icon fa fa-arrows bigger-130"></i>
                                </a>
                               </td>


                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="number" colspan="5"><h4>No Data Available!</h4></td>
                        </tr>
                    }


                </tbody>
            </table>
       
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dynamic-table').DataTable();
    });
</script>

