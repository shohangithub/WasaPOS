@model IEnumerable<Model.Entities.DueTransaction>

@{
    ViewBag.Title = "DueCollectionRecordsList";
}
<div class="col-xs-12">

    <div class="clearfix">
        <div class="pull-right tableTools-container"></div>
    </div>
    <div class="table-header btn-custom">
        Results for "Due Collection Records List"
        <a class="pull-right btn-print" href="@Url.Action("DueCollectionRecords","Reports",new{id = "PDF",  Acc_id = @ViewBag.ac,fd = @ViewBag.date, td = @ViewBag.tdate })" target="_blank">
            <i class="ace-icon fa fa-print bigger-130"></i> Print
        </a>

    </div>


    <table id="dynamic-table" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Transaction Id  </th>
                <th>Customer Name </th>
                <th>Contact Person</th>
                <th>Phone </th>
                <th>Due Amount</th>
            </tr>
        </thead>

        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DueTR_Id</td>
                        <td>@Convert.ToDateTime(@item.PaymentDate).ToString("dd-MM-yyy")</td>
                        <td>@item.Customer.CustomerName</td>
                        <td>@item.Customer.ContactPerson</td>
                        <td>@item.Customer.Phone</td>
                        <td>@item.InAmount</td>


                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="number" colspan="5"><h4>No Due Amount Available!</h4></td>
                </tr>
            }


        </tbody>
    </table>

</div>