@model IEnumerable<Model.Entities.Sale>
@{
    ViewBag.Title = "SalesRecordsList";
}
<div class="col-xs-12">

    <div class="clearfix">
        <div class="pull-right tableTools-container"></div>
    </div>
    <div class="table-header btn-custom">
        Results for "Records List"
        @*<a class="pull-right btn-print" href="@Url.Action("LAReport", "LTReports", new { id = "PDF", acid = @ViewBag.Acc_id })" target="_blank">
            <i class="ace-icon fa fa-print bigger-130"></i> Print
        </a>*@
    </div>


    <table id="dynamic-table" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Invoice No </th>
                <th>Customer Name </th>
                <th>Discount</th>
                <th>Total</th>
                <th>Paid</th>
                <th>Due</th>
              

            </tr>
        </thead>

        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Convert.ToDateTime(@item.SaleDate).ToString("dd-MM-yyy")</td>
                        <td>@item.InvoiceId</td>
                        <td>@item.Customer.CustomerName</td>
                        <td>@item.Discount</td>
                        <td>@item.NetTotal</td>
                        <td>@item.CashReceive</td>

                        <td>@item.DueAmount</td>
                       



                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="number" colspan="7"><h4>No Data Available!</h4></td>
                </tr>
            }


        </tbody>
    </table>

</div>



