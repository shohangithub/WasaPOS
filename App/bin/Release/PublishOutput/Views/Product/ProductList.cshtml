@model IEnumerable<Model.Entities.Product>
<table id="dynamic-table" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Product Name </th>
            <th>Size </th>
            <th>Unit </th>
            <th>Cost Price(Tk.) </th>
            <th>Sales Price(Tk.) </th>


        </tr>
    </thead>

    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>

                    <td>@item.ProductName</td>
                    <td>@item.Size</td>
                    <td>@item.Uint</td>
                    <td>@item.CostPrice</td>
                    <td>@item.FacePrice</td>


                    @*<td>
                                @if (@item.Status == "P")
                            {
                                <span class="label label-sm label-warning">Pending</span>
                            }
                            else
                            {
                                <span class="label label-sm label-success">Approved</span>
                            }
                        </td>
                        <td>

                            <a class="green" style="cursor:pointer" onclick="return getById('  @item.LTId ')">
                                <i class="ace-icon fa fa-pencil bigger-130"></i>
                            </a>

                            <a class="red" style="cursor:pointer" onclick="DeleteLT('@item.LTId')">
                                <i class="ace-icon fa fa-trash-o bigger-130"></i>
                            </a>
                        </td>*@

                </tr>
            }
        }
        else
        {
            <tr>
                <td class="number" colspan="5"><h4>No Data Available!</h4></td>
            </tr>
        }


    </tbody>

</table>